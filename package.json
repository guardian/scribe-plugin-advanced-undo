  "licenses": [
    {
      "type": "Apache2"
    }
  ],
  "main": "src/scribe-plugin-advanced-undo",
  "engines": {
    "node": ">= 0.10.0"
  },
  "scripts": {
    "env": "env",
    "test-firefox": "TEST_SERVER_PORT=9090 BROWSER_NAME='firefox' ./run-tests.sh",
    "test-chrome": "TEST_SERVER_PORT=9090 BROWSER_NAME='chrome' ./run-tests.sh",
    "test": "npm run test-chrome",
    "postinstall": "bower install",
    "watch": "nodemon --watch src --watch test --exec 'npm run test'",
    "clean": "if [ -d ./build ]; then rm -rf ./build; fi",
    "prebuildjs": "if [ ! -d ./build ]; then mkdir ./build; fi",
    "buildjs": "browserify ./src/scribe-plugin-advanced-undo.js --debug -t babelify | exorcist build/main.js.map > build/main.js",
    "postbuildjs": "uglifyjs ./build/main.js --source-map ./build/main.build.js.map --in-source-map ./build/main.js.map -o ./build/main.build.js",
    "build": "npm run clean && npm run buildjs"
  },
  "devDependencies": {
    "babel": "^4.0.2",
    "babelify": "^5.0.3",
    "bower": "^1.3.12",
    "browserify": "^8.1.3",
    "chai": "1.9.1",
    "exorcist": "^0.1.6",
    "glob": "^4.3.5",
    "http-server": "^0.7.1",
    "lodash": "^2.4.1",
    "mocha": "^2.0.1",
    "nodemon": "^1.3.7",
    "scribe-test-harness": "^0.0.6",
    "selenium-webdriver": "^2.44.0",
    "uglify-js": "^2.4.16",
    "webdriver-manager": "^1.0.1"
  }
}
